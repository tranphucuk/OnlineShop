@model OnlineShop.Web.Models.HomeViewModel
@using OnlineShop.Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/Layout.cshtml";
    var month = (int)ViewBag.Month;
}

@section FooterJs{
    <script src="/Assets/Client/js/jquery.wmuSlider.js"></script>
    <script>
        $('.example1').wmuSlider();
    </script>

}

<div class="shoes-grid">
    <a href="single.html"></a>
    <div class="wrap-in">
        <div class="wmuSlider example1 slide-grid">
            <div class="wmuSliderWrapper">
                @foreach (var slide in Model.Slides)
                {
                    <article style="position: absolute; width: 100%; opacity: 0;">
                        <div class="banner-matter">
                            <div class="col-md-5 banner-bag">
                                <img class="img-responsive " src="@slide.Image" alt="@slide.Name" />
                            </div>
                            <div class="col-md-7 banner-off">
                                <h2>@slide.Name</h2>
                                <label>@slide.Description</label>
                                <p>@Html.Raw(slide.Content)</p>
                                <a href="@slide.URL"><span class="on-get">GET NOW</span></a>
                            </div>
                            <div class="clearfix"> </div>
                        </div>
                    </article>
                }
            </div>
        </div>
        <a href="single.html"></a>
    </div>
    <div class="products">
        <h5 class="latest-product">LATEST PRODUCTS</h5>
        <a class="view-all" href="/latest-products-month-@(month).html">VIEW ALL<span> </span></a>
    </div>
    <div class="product-left">
        @foreach (var product in Model.LatestProducts)
        {
            var url = "/" + product.Alias + ".p-" + product.ID + ".html";
            <div class="col-md-4 chain-grid @(product.Name == Model.LatestProducts.Last().Name ? "grid-top-chain" :"")">
                <a href="@url"><img class="img-responsive chain" src="@product.Image" alt="@product.Name" /></a>
                <span class="star"> </span>
                <div class="grid-chain-bottom">
                    <h6><a href="@url">@product.Name</a></h6>
                    <div class="star-price">
                        <div class="dolor-grid">
                            <span class="actual">@CommonConstants.GetCurrency(product.Price)</span>
                            @if (product.PromotionPrice.HasValue)
                            {
                                <span class="reducedfrom">@CommonConstants.GetCurrency(product.PromotionPrice.Value)</span>
                            }
                        </div>
                        @*<a class="now-get get-cart btnAddToCart" href="#" data-id="@product.ID">ADD TO CART</a>*@
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>

        }
        <div class="clearfix"> </div>
    </div>
    <div class="products">
        <h5 class="latest-product">HOT PRODUCTS</h5>
        <a class="view-all" href="/hot-products-month-@(month).html">VIEW ALL<span> </span></a>
    </div>
    <div class="product-left">
        @foreach (var product in Model.HotProducts)
        {
            var indexOfProduct = Model.HotProducts.ToList().IndexOf(product);
            var url = "/" + product.Alias + ".p-" + product.ID + ".html";
            <div class="col-md-4 chain-grid @(indexOfProduct %3 ==0 ? "grid-top-chain" :"")">
                <a href="@url"><img class="img-responsive chain" src="@product.Image" alt="@product.Name" /></a>
               @* <span class="star"> </span>*@
                <div class="grid-chain-bottom">
                    <h6><a href="@url">@product.Name</a></h6>
                    <div class="star-price">
                        <div class="dolor-grid">
                            <span class="actual">@CommonConstants.GetCurrency(product.Price)</span>
                            @if (product.PromotionPrice.HasValue)
                            {
                                <span class="reducedfrom">@CommonConstants.GetCurrency(product.PromotionPrice.Value)</span>
                            }
                        </div>
                        @*<a class="now-get get-cart btnAddToCart" href="#" data-id="@product.ID">ADD TO CART</a>*@
                        <div class="clearfix"> </div>
                    </div>
                </div>
            </div>
        }
        <div class="clearfix"> </div>
    </div>
    <div class="clearfix"> </div>
</div>
