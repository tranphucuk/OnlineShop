@model OnlineShop.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/Layout.cshtml";
}

<div class="account_grid">
    <div class=" login-right">
        <h3>REGISTERED CUSTOMERS</h3>
        <p>If you have an account with us, please log in.</p>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.returnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true, "", new { @class = "validation" })
            <div>
                <span>Email Address<label>*</label></span>
                @Html.TextBoxFor(model => model.Username)
            </div>
            <div>
                <span>Password<label>*</label></span>
                @Html.PasswordFor(model => model.Password)
            </div>
            <div>
                @Html.CheckBoxFor(model => model.RememberMe)
                <span class="remember">Remember me<label>*</label></span>
                <a class="forgot" href="#">Forgot Your Password?</a>
            </div>
            <input type="submit" value="Login">
        }

        @Html.Partial("_ExternalLoginsListPartial", new OnlineShop.Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.returnUrl })

    </div>
    <div class=" login-left">
        <h3>NEW CUSTOMERS</h3>
        <p>By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
        <a class="acount-btn" href="register.html">Create an Account</a>
    </div>
    <div class="clearfix"> </div>
</div>

