@model IEnumerable<OnlineShop.Web.Models.ProductCategoryViewModel>

<div class="sub-cate">
    <div class="top-nav rsidebar span_1_of_left">
        <h3 class="cate">CATEGORIES</h3>
        <ul class="menu">
            @foreach (var productCategories in Model.Where(x => x.ParentID == 0))
            {
                var url = "/" + productCategories.Alias + ".pc-" + productCategories.ID + ".html";
                var childProductCategories = Model.Where(x => x.ParentID == productCategories.ID);
                <li class="item1">
                    <a href="@url">@productCategories.Name @(childProductCategories.Count() > 0 ? "<img class=\"arrow-img\" src=\"images/arrow1.png\" alt=\"\"/>" : "")</a>
                    @if (childProductCategories.Count() > 0)
                    {
                        <ul class="cute">
                            @foreach (var childProductCategory in childProductCategories)
                            {
                                var urlChild = "/" + productCategories.Alias + ".pc-" + productCategories.ID + ".html";
                                <li class="subitem2"><a href="@urlChild">@childProductCategory.Name</a></li>
                            }
                        </ul>
                    }
                </li>
            }
        </ul>
    </div>
